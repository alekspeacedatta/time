<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/shopping-bag.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <%- include('blocks/header') -%>
    <main>
        <%- include('blocks/shopping-bag') -%>
        <div class="products-container">
            <div class="products-container-content">
                <!-- CASIO -->
                <div class="brand casio">
                    <div class="products-heading">
                        <h3>best of Casio</h3>
                        <div class="prev-next">
                            <button class="prev">&#10094</button>
                            <button class="next">&#10095</button>
                        </div>
                    </div>
                    <div class="slider-container">
                        <div class="slider">
                            <% watches.forEach(watch =>  { %>
                                <% if(watch.brand === "CASIO")  { %>
                                    <div class="slide" onclick="window.location.href='/<%= encodeURIComponent(watch.name.replace(/\s+/g, '-')) %>/<%= watch.id %>'">
                                        <div class="slide-content">
                                            <section>
                                                <img src="<%= watch.mainImage %>" alt="<%= watch.name %>">
                                                <div class="slide-heading">
                                                    <span><%= watch.brand %></span>
                                                    <h3><%= watch.name %></h3>
                                                </div>
                                            </section>
                                            <div class="slide-price">
                                                <p><%= watch.price %> $</p>
                                                <form action="/add-to-cart/<%= watch._id %>" method="POST">
                                                    <button type="submit">add to</button>
                                                </form>
                                            </div>     
                                        </div>
                                    </div>
                                <% }; %>
                           <% }); %>
                        </div>
                    </div>
                </div>

                <!-- SKAGEN -->
                <div class="brand skagen">
                    <div class="products-heading">
                        <h3>best of Skagen</h3>
                        <div class="prev-next">
                            <button class="prev">&#10094</button>
                            <button class="next">&#10095</button>
                        </div>
                    </div>
                    <div class="slider-container">
                        <div class="slider">
                            <% watches.forEach(watch => { %>
                                <% if(watch.brand === "SKAGEN"){ %>
                                    <div class="slide" onclick="window.location.href='/<%= encodeURIComponent(watch.name.replace(/\s+/g, '-')) %>/<%= watch.id %>'">
                                        <div class="slide-content">
                                            <section>
                                                <img src="<%= watch.mainImage %>" alt="<%= watch.name %>">
                                                <div class="slide-heading">
                                                    <span><%= watch.brand %></span>
                                                    <h3><%= watch.name %></h3>
                                                </div>
                                            </section>
                                            <div class="slide-price">
                                                <p><%= watch.price %> $</p>
                                                <form action="/add-to-cart/<%= watch._id %>" method="POST">
                                                    <button type="submit">add to</button>
                                                </form>
                                            </div>     
                                        </div>
                                    </div>
                                <% } %>
                            <% }) %>
                        </div>
                    </div>
                </div>

                <!-- DANIEL WELLINGTON -->
                <div class="brand daniel-wellington">
                    <div class="products-heading">
                        <h3>best of Daniel Wellington</h3>
                        <div class="prev-next">
                            <button class="prev">&#10094</button>
                            <button class="next">&#10095</button>
                        </div>
                    </div>
                    <div class="slider-container">
                        <div class="slider">
                            <% watches.forEach(watch => { %>
                                <% if(watch.brand === "DANIEL WELLINGTON") { %>
                                    <div class="slide daniel-wellington" onclick="window.location.href='/<%= encodeURIComponent(watch.name.replace(/\s+/g, '-')) %>/<%= watch.id %>'">
                                        <div class="slide-content">
                                            <section>
                                                <img src="<%= watch.mainImage %>" alt="<%= watch.name %>">
                                                <div class="slide-heading">
                                                    <span><%= watch.brand %></span>
                                                    <h3><%= watch.name %></h3>
                                                </div>
                                            </section>
                                            <div class="slide-price">
                                                <p><%= watch.price %> $</p>
                                                <form action="/add-to-cart/<%= watch._id %>" method="POST">
                                                    <button type="submit">add to</button>
                                                </form>
                                            </div>     
                                        </div>
                                    </div>
                                <% } %>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="fixed">
        <div class="fixed-cart">
            <i id="cart-icon2" class="fa-solid fa-cart-shopping"></i>
        </div>
        <div class="fixed-wishlist">
        <i class="fa-regular fa-star"></i>
        </div>
    </div>



    <%- include("blocks/footer") -%>

    <script src="/js/slider.js"></script>
    <script src="/js/cartTougle.js"></script>

    <!-- Auto-show shopping bag after adding to cart -->
    <% if (typeof showBag !== 'undefined' && showBag) { %>
      <script>
        window.addEventListener("DOMContentLoaded", () => {
          const bag = document.querySelector(".shopping-bag");
          if (bag && !bag.classList.contains("show")) {
            bag.classList.add("show");
          }
        });
      </script>
    <% } %>
</body>
</html>
