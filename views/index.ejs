    <!-- Auto-show shopping bag after adding to cart -->
    <% if (typeof showBag !== 'undefined' && showBag) { %>
      <script>
        window.addEventListener("DOMContentLoaded", () => {
          const bag = document.querySelector(".shopping-bag");
          if (bag && !bag.classList.contains("show")) {
            bag.classList.add("show");
          }
        });
      </script>
    <% } %>
    <% if (typeof showWishList !== 'undefined' && showWishList) { %>
      <script>
        window.addEventListener("DOMContentLoaded", () => {
          const wishList = document.querySelector(".wishlist");
          if (wishList && !wishList.classList.contains("show")) {
